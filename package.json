{
  "name": "dharul-uloom-kashiful-hudha-website",
  "version": "1.0.0",
  "description": "Official website for Dharul Uloom Kashiful Hudha Arabic College",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,green\"",
    "dev:frontend": "vite",
    "dev:backend": "cd backend && npm run dev",
    "build": "vite build",
    "build:backend": "cd backend && npm install",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "install:all": "npm install && cd backend && npm install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-i18next": "^13.5.0",
    "i18next": "^23.7.6",
    "axios": "^1.6.2",
    "framer-motion": "^10.16.16",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.66.0",
    "yup": "^1.3.3",
    "@hookform/resolvers": "^3.3.2",
    "recharts": "^2.10.3",
    "react-toastify": "^9.1.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "vitest": "^1.0.4",
    "concurrently": "^8.2.2"
  }
}
